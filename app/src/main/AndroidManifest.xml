<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.winesmeller">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_wine"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_wine_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activities.login.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainMenuActivity"
            android:theme="@style/AppTheme"/>

        <activity android:name=".activities.login.PasswordForgottenActivity"
            android:theme="@style/AppTheme"/>

        <activity android:name=".activities.login.SignUpActivity"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>